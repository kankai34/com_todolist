<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			type="text"
			label="COM_TODOLIST_FIELD_NAME_LABEL"
			description="COM_TODOLIST_FIELD_NAME_DESC"
			maxlength="255"
			class="inputbox"
			default=""
			required="true"
		/>
		<field
			name="catid"
			type="category"
			extension="com_todolist"
			label="COM_TODOLIST_FIELD_CATEGORY_LABEL"
			description="COM_TODOLIST_FIELD_CATEGORY_DESC"
			class="inputbox"
			default=""
			required="true"
		>
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
		<field
			name="date"
			type="calendar"
			label="COM_TODOLIST_FIELD_DATE_LABEL"
			description="COM_TODOLIST_FIELD_DATE_DESC"
			maxlength="10"
			class="inputbox"
			default=""
			format="%Y-%m-%d"
			required="true"
		/>
		<field
			name="status"
			type="list"
			label="COM_TODOLIST_FIELD_STATUS_LABEL"
			description="COM_TODOLIST_FIELD_STATUS_DESC"
			class="inputbox"
			default=""
			required="true"
		>
			<option value="">COM_TODOLIST_OPTION_STATUS_0</option>
			<option value="1">COM_TODOLIST_OPTION_STATUS_1</option>
			<option value="2">COM_TODOLIST_OPTION_STATUS_2</option>
			<option value="3">COM_TODOLIST_OPTION_STATUS_3</option>
			<option value="4">COM_TODOLIST_OPTION_STATUS_4</option>
		</field>
	</fieldset>
</form>